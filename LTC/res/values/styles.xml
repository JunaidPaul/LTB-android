<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="destination" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:gravity">center</item>=
        <item name="android:textColor">#ffd000</item>
    </style>
    <style name="blank_destination" parent="@style/destination">
        <item name="android:textColor">#d0d0d0</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="invalid_destination" parent="@style/destination">
        <item name="android:textColor">#ffa0a0</item>
    </style>
    <style name="seriously_invalid_destination" parent="@style/destination">
        <item name="android:textColor">#ff0000</item>
    </style>
    <style name="normal_pred_time">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="querying_pred_time">
        <item name="android:textColor">#c0c0c0</item>
    </style>
    
    <color name="bg_querying">#ffffa0</color>
    <color name="bg_failed">#ff0000</color>
    <color name="bg_ok">#a0ffa0</color>
    <color name="bg_idle">#b0b0b0</color>
    
    <style name="route_view" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="route_idle" parent="@style/route_view">
    </style>
    <style name="route_querying" parent="@style/route_view">
    </style>
    <style name="route_ok" parent="@style/route_view">
    </style>
    <style name="route_failed" parent="@style/route_view">
        <item name="android:textColor">#ffa0a0</item>
    </style>
        
</resources>